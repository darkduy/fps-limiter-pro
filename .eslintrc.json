{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": [
    // Thêm plugin này
    "local-rules"
  ],
  "extends": [
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "prettier"
  ],
  "rules": {
    // Kích hoạt quy tắc tùy chỉnh của chúng ta
    "local-rules/no-console-log": "error"
  }
}
