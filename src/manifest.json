{
  "manifest_version": 3,
  "name": "FPS Limiter Pro",
  "version": "1.0.0",
  "description": "Advanced FPS Limiter with profiles, smart optimization, and tab suspension.",
  "permissions": [ "storage", "tabs", "alarms" ],
  "host_permissions": [ "<all_urls>" ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
